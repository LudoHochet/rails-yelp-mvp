<div class="container mt-3">
  <h1><%= @restaurant.name %></h1>

<div class="row">
  <div class="col-4">
    <div class="card-trip">
      <img src="https://images.unsplash.com/photo-1476224203421-9ac39bcb3327?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" />
      <div class="card-trip-infos">
        <div>
          <h2><%= @restaurant.address %></h2>
          <p><%= @restaurant.phone_number %></p>
        </div>
        <h2 class="card-trip-pricing"><%= @restaurant.category %></h2>
      </div>
    </div>
  </div>
</div>
    <% @restaurant.reviews.each do |review| %>
      <ul class="list-inline">
      <li class="list-inline-item"><%= review.content %></li>
      <li class="list-inline-item">
        <% review.rating.times do %>
          <i class="fas fa-star"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-2" %>
</div>

